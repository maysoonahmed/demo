<h1>Listing authers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Date of birth</th>
      <th>Book</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authers.each do |auther| %>
      <tr>
        <td><%= auther.name %></td>
        <td><%= auther.date_of_birth %></td>
        <td><%= auther.book_id %></td>
        <td><%= link_to 'Show', auther %></td>
        <td><%= link_to 'Edit', edit_auther_path(auther) %></td>
        <td><%= link_to 'Destroy', auther, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

